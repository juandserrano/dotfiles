{
  // Workspaces
  "hyprland/workspaces": {
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "format": "{}",
    "format-icons": {
      "urgent": "",
      "active": "",
      "default": ""
    },
    // "persistent-workspaces": {
    //   "*": 5
    // }
  },

  // Hyprland Window
  "hyprland/window": {
    "rewrite": {
      "(.*) - Zen Browser": "$1",
      "(.*) - Brave": "$1",
      "(.*) - Chromium": "$1",
      "(.*) - Brave Search": "$1",
      "(.*) - Outlook": "$1",
      "(.*) Microsoft Teams": "$1"
    },
    "separate-outputs": true
  },

  // Rofi Application Launcher
  "custom/appmenu": {
    "format": "Û∞£á",
    "tooltip-format": "Left: Open the application launcher\nRight: Show all keybindings",
    "on-click": "rofi -show drun -replace & sleep 0.2; hyprctl dispatch focuswindow '^(Rofi)'",
    "on-click-right": "~/.config/notscripter/scripts/keybindings.sh",
    "tooltip": false
  },

  // PIA
  "custom/pia": {
    "exec": "/home/thor/dotfiles/config/waybar/notscripter/pia.sh",
    "format": "{text}",
    "tooltip-format": "PIA",
    "format-icons": {
      "on": "ÔÜº",
      "off": "üéµ"
    },
    "on-click": "/opt/piavpn/bin/pia-client"
  },

  // Transmission
  "custom/transmission": {
    "exec": "/home/thor/dotfiles/config/waybar/notscripter/transmission.sh",
    "format": "{text}",
    "format-icons": {
      "on": "ÔÜº",
      "off": "üéµ"
    },
  },
  // Tailscale
  "custom/tailscale": {
    "exec": "/home/thor/dotfiles/config/waybar/notscripter/tailscale.sh",
    "format": "{text}",
    "tooltip-format": "Tailscale",
    "format-icons": {
      "on": "ÔÜº",
      "off": "üéµ"
    },
    "on-click-right": "tailscale down",
    "on-click": "tailscale up"
  },


  // Power Menu
  "custom/exit": {
    "format": "ÔÄë",
    "tooltip-format": "Powermenu",
    "on-click": "wlogout -b 4",
    "tooltip": false
  },

  "custom/notification": {
    "tooltip": false,
    // "format": "{} {icon}",
    "format": "{icon}",
    "format-icons": {
      "notification": "Û±Ö´",
      "none": "Û∞Çö",
      "dnd-notification": "Û±Ö´",
      "dnd-none": "Û∞Çõ",
      "inhibited-notification": "ÔÇ¢",
      "inhibited-none": "ÔÇ¢",
      "dnd-inhibited-notification": "ÔÇ¢",
      "dnd-inhibited-none": "ÔÇ¢"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },

  // Keyboard State
  //"keyboard-state": {
  //  //"numlock": true,
  //  //"capslock": true,
  //  //"format": "{name} {icon}",
  //  //"format-icons": {
  //  //  //"locked": "ÔÄ£",
  //  //  //"unlocked": "ÔÇú"
  //  //}
  //},

  // System tray
  "tray": {
    "icon-size": 24,
    "spacing": 8
  },

  // Clock
  "clock": {
    // "timezone": "America/New_York",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format": "Û∞•î {0:%H:%M}",
    "format-alt": "Û∞•î {0:%H:%M}  ÔÅ≥ {0:%d-%m-%Y}"
  },

  "hyprland/language": {
    "format": "/ K {short}"
  },

  // Network
  "network": {
    "format": "{ifname}",
    "format-wifi": "Ôá´  {signalStrength}% ÔÑ∫ {bandwidthDownBytes} ÔÑπ {bandwidthUpBytes} ",
    "format-ethernet": "ÔÑ∫ {bandwidthDownBytes} ÔÑπ {bandwidthUpBytes} ",
    "format-disconnected": "Not connected",
    "tooltip-format": "Ôäá  {ifname} via {gwaddri}",
    "tooltip-format-wifi": "Ôá´   {essid} ({signalStrength}%)",
    "tooltip-format-ethernet": "ÔÉÅ  {ifname} ({ipaddr}/{cidr})",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 25,
    "min-length": 25,
    "interval": 1,
    "on-click": "nm-connection-editor"
  },

  // Battery
  "battery": {
    "states": {
      // "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon}   {capacity}%",
    "format-charging": "Ôóß  {capacity}%",
    "format-plugged": "Ôá¶  {capacity}%",
    "format-alt": "{icon}  {time}",
    // "format-good": "", // An empty format will hide the module
    // "format-full": "",
    "format-icons": ["ÔâÑ ", "ÔâÉ ", "ÔâÇ ", "ÔâÅ ", "ÔâÄ "]
  },

  // Bluetooth
  "bluetooth": {
    "format-disabled": "",
    "format-off": "",
    "interval": 30,
    "on-click": "blueman-manager",
    "format-no-controller": ""
  },

  // Other
  "user": {
    "format": "{user}",
    "interval": 60,
    "icon": false
  },

  // Idle Inhibator
  "idle_inhibitor": {
    "format": "{icon}",
    "tooltip": true,
    "format-icons": {
      "activated": "ÔèÅ",
      "deactivated": "ÔÄ£"
    },
    "on-click-right": "hyprlock"
  }
}

